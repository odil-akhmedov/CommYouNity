<div class="formbg">
    @model CommYouNity.Location

    <h1>Are you sure you want to delete this city?</h1>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Zip)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Zip)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImgSrc)
            </dt>

            <dd>
                @{if (Model.ImgSrc.Length > 2)
                {
                    string[] images = Model.ImgSrc.Split(';');
                    for (int i = 0; i < images.Count() - 1; i++)
                    {
                        <div class="img">
                            <a href="@images[i]"><img src="@images[i]" alt="@Model.Name" width=" 150" height="100" /></a>
                        </div>
                    }
                }
                else
                {
                    <p>No image uploaded</p>
                }
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.GoogleMap)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GoogleMap)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>